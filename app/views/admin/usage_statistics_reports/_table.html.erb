<table class="table datatables">
  <% array.each_with_index do |row, idx| %>
    <% if idx.zero? %>
      <thead><tr><%= safe_join(row.map { |cell| content_tag :th, cell }) %></tr></thead>
    <% else %>
      <tbody><tr><%= safe_join(row.map { |cell| content_tag :td, cell }) %></tr></tbody>
    <% end %>
  <% end %>
</table>
