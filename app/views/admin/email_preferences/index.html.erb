<div class="admin-content">

  <table class="table">
    <tr>
      <th>Author</th>
      <th>Monthly opt out</th>
      <th>Alternate Email</th>
    </tr>
    <% for email_preference in @email_preferences %>
      <tr>
        <td>
          <%= h email_preference.author %>
        </td>
        <td>
          <%= h email_preference.monthly_opt_out %>
        </td>
        <td>
          <%= h email_preference.email %>
        </td>
        <td>
          <%= link_to 'Show', admin_email_preference_path(email_preference) %>
        </td>
        <td>
          <%= link_to 'Edit', edit_admin_email_preference_path(email_preference) %>
        </td>
        <td>
          <%= button_to 'Destroy', admin_email_preference_path(email_preference), confirm: 'Are you sure?', method: :delete %>
        </td>
      </tr>
    <% end %>
  </table>
  <p>
    <%= link_to "New Email Preference", new_admin_email_preference_path %>
  </p>
</div>
