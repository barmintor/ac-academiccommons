<%= content_for :content do %>
  <div id="main-page">

    <% if content_for? :header %>
      <div class="page-header">
        <%= yield(:header) %>
      </div>
    <% end %>

    <% if content_for? :sidebar %>
      <div class="col-md-2 side-nav">
        <%= yield(:sidebar) %>
      </div>
      <div class="col-md-10 main-content left-border">
        <%= yield %>
      </div>
    <% else %>
      <div class="col-md-12 main-content">
        <%= yield %>
      </div>
    <% end %>

  </div>

<% end %>

<%= render template: 'layouts/catalog' %>
