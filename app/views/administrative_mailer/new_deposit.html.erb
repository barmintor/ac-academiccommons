<div>
  <b>Name:</b> <%= @deposit.name %>
</div>

<hr>

<div><b>Title:</b></div>
<div><%= @deposit.title %></div>

<hr>

<div><b>Creators:</b></div>
<div><%= @deposit.creators.map { |c| "#{c[:first_name]} #{c[:last_name]}" }.join(', ') %></div>

<hr>

<div><b>Record in Hyacinth:</b></div>
<% if @deposit.hyacinth_identifier %>
  <div><%= link_to 'Link to record', Hyacinth.digital_object_url(@deposit.hyacinth_identifier) %></div>
<% else %>
  <p>No Hyacinth identifier found in record.</p>
<% end %>
