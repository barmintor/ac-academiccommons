
<% unless @pending_works.empty? %>
  <h3>Pending Works</h3>
  <% @pending_works.each do |document| %>
    <p><%= document.title %></p>
  <% end %>
<% end %>

<% unless @embargoed_works.empty? %>
  <h3>Embargoed Works</h3>
  <% @pending_works.each do |document| %>
    <p><%= link_to document.to_semantic_values[:title].first, solr_document_path(document.to_semantic_values[:id].first) %></p>
  <% end %>
<% end %>

<h3>Available Works</h3>
<% if @current_works_with_stats.empty? %>
  <h4>No works available </h4>
  <p>Visit our <%= link_to 'upload page', uploads_path %> to contribute your works.</p>
<% else %>
  <%= @current_works_with_stats.time_period %>

  <% @current_works_with_stats.each do |item_stats| %>
    <% document = item_stats.document %>
    <p>
      <%= link_to document.to_semantic_values[:title].first, solr_document_path(document.to_semantic_values[:id].first) %>
      <%= item_stats.get_stat(Statistic::DOWNLOAD, AcademicCommons::Metrics::UsageStatistics::PERIOD) %>
      <%= item_stats.get_stat(Statistic::DOWNLOAD, AcademicCommons::Metrics::UsageStatistics::LIFETIME) %>
    </p>
  <% end %>

  <p>
    Totals:
    <%= @current_works_with_stats.total_for(Statistic::DOWNLOAD, AcademicCommons::Metrics::UsageStatistics::PERIOD) %>
    <%= @current_works_with_stats.total_for(Statistic::DOWNLOAD, AcademicCommons::Metrics::UsageStatistics::LIFETIME) %>
  </p>
<% end %>
