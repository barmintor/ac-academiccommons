<% @page_title = "Email Preference" %>

<div class="box">
  <p>
    <strong>Author:</strong>
    <%= h @email_preference.author %>
  </p>
  <p>
    <strong>Monthly Opt Out:</strong>
    <%= h @email_preference.monthly_opt_out %>
  </p>
  <p>
    <strong>Alternate Email:</strong>
    <%= h @email_preference.email %>
  </p>
  <p>
    <%= link_to "Edit", edit_email_preference_path(@email_preference) %>
    |
    <%= link_to "View All", email_preferences_path %>
  </p>
  <%= button_to 'Destroy', email_preference_path(@email_preference), :confirm => 'Are you sure?', :method => :delete %>
</div>
