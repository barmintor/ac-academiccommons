- @page_title = "Email Preferences"

= render :partial=>'admin_sidebar'

.box

  %table
    %tr
      %th Author
      %th Monthly opt out
      %th Alternate Email
    - for email_preference in @email_preferences
      %tr
        %td= h email_preference.author
        %td= h email_preference.monthly_opt_out
        %td= h email_preference.email
        %td= link_to 'Show', email_preference
        %td= link_to 'Edit', edit_email_preference_path(email_preference)
        %td= button_to 'Destroy', email_preference_path(email_preference), :confirm => 'Are you sure?', :method => :delete
  
  %p= link_to "New Email Preference", new_email_preference_path
