<%= render :partial => 'student_info_fields', :locals => { :required_class => "pageRequired required" } %>

<div class="buttonWrapper" style="padding:  10px 0 0 0;">
	<input name="formNext1" type="submit" class="agree_only_submit nextbutton" value="Submit" alt="Submit" title="Submit" />
</div>
</fieldset>
<% end %>

</div>