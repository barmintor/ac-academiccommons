  <ul class="tools">
    <% if (@document[:export_as_mla_citation_txt] || @document[:export_as_apa_citation_txt]) %>
      <li class="cite">
         <%= link_to "Cite This", citation_catalog_path(@document[:id]), {:id => 'citeLink', :name => 'citation', :class => 'lightboxLink'} %>
      </li>
    <% end %>
    
    <% if @document.export_formats.keys.include?( :refworks_marc_txt ) %>
      <li class="refworks">
        <%= link_to "Export to RefWorks", refworks_export_url(@document) %>        
      </li>
    <% end %>
    
    <% if @document.export_formats.keys.include?( :endnote ) %>
      <li class="endnote">
        <%= link_to "Export to EndNote", catalog_path(@document[:id], :format => 'endnote') %>
      </li>
    <% end %>
    
    <% if @document.respond_to?(:to_marc) %>
      <li class="email">
         <%= link_to "Email This", email_catalog_path(@document[:id]), {:id => 'emailLink', :name => 'email', :class => 'lightboxLink'} %>
      </li>
      <li class="sms">
         <%= link_to "SMS This", sms_catalog_path(@document[:id]), {:id => 'smsLink', :name => 'sms', :class => 'lightboxLink'} %>
      </li>
    <% end %>
    
    <% if @document.respond_to?(:to_marc) %>
      <li class="librarian_view">
        <%= link_to "Librarian View", librarian_view_catalog_path(@document[:id]), {:id => 'librarianLink', :name => 'librarian_view', :class => 'lightboxLink'} %>
      </li>
    <% end %>
    
    <li class="social twitter">    
	<a href="https://twitter.com/intent/tweet?url=<%= request.original_url %>">Share to Twitter</a>
    </li>
    
    <li class="social facebook">
    <a href="https://facebook.com/sharer.php?u='<%= request.original_url %>'">Facebook</a>
	</li>
  
	<li class="social google">
	<a href="https://plusone.google.com/_/+1/confirm?hl=en&url=<%= request.original_url %>">Share to Google+</a>
	</li>
    
    
   </ul>
