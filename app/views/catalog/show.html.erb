<% @page_title = "#{document_show_html_title} - #{application_name}" %>
<% extra_head_content << render_link_rel_alternates %>
<div>
 
 <%= render 'previous_next_doc' -%>     
	 <%if !alert_msg.empty? %>
       <%= render :partial => "/catalog/alert_box.erb" %>
	 <%end%> 
	 
</div>


<% content_for :sidebar do %>
 

<h2>Download</h2>
 
<div class="sidebar-content">
<%=  render :partial => "catalog/_show_partials/display_resources", :locals => {:document => @document} %>
</div>
 
<h2>Share</h2>
<div class="sidebar-content">
 <div class="documentFunctions">
         <%= render :partial => 'show_tools' %>
 </div>
</div>

<hr>

<h3>Academic Commons</h3> 
<div class="sidebar-content">
<a  class='nav-link'  href="<%= relative_root %>/about/">About</a>
 
<a class='nav-link' href="javascript:UserVoice.showPopupWidget();" >FAQ/Ask a Question</a>   

</div>
<% end %>


<div id="document">
  <div id="doc_<%= @document[:id] %>" class=" <%= render_document_class %>">
          

    <div class="">
      <%#= render_document_partial @document, :show %>
      <%= render :partial => "catalog/_show_partials/default", :locals => {:document => @document}  %>

    </div>
  </div>
</div>


<%= render :partial=>'solr_request' %>


  <% if @document.respond_to?(:export_as_openurl_ctx_kev) %>
    <!-- 
         // COinS, for Zotero among others. 
         // This document_partial_name(@document) business is not quite right,
         // but has been there for a while. 
    -->
    <span class="Z3988" title="<%= @document.export_as_openurl_ctx_kev(document_partial_name(@document)) %>"></span>
  <% end %>
</div>