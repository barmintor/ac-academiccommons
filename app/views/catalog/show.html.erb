  <%= link_to "Subjects", subjects_browse_path, :class=>"nav-link" %>
    
</div>

 
<h3>Helpful Links</h3>
 
<div class='box home-side'>

<%= render :partial=>'home_accessory_links' %>
</div>
  
<% end %>
