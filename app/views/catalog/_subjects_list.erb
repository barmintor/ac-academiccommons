<h1 class="content-title">Browsing Content by Subjects</h1>
<% get_subjects_list.in_groups(3, fill_with=false) do |group| %>
   
    <ul class = 'span-7'>
    <% group.each do |v| %>
      <li> <%= link_to(v[:name], catalog_index_path()+'?f%5Bsubject%5D%5B%5D='+v[:name] ) %> (<%= v[:count] %>)  </li>
    <% end %>
    </ul>
 
<% end %>

