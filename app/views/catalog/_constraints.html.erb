<div id="search-breadcrumb">
  <dl>
    <dt >

       Showing Results for:
    
    </dt>
    <dd>
      <%- if !localized_params[:q].to_s.empty? -%>
        <% q_arr = get_search_breadcrumb_terms(localized_params[:q]) %>
        <span class='search_terms'>
          <ul>
            <%- q_arr.each do |q_param| -%>
              <li>
                <span class="q_param">
                  <%= q_param %>
                </span> 
                <span class='remove_link'>
                  <%= link_to(image_tag('icons/remove-icon.png', :alt=>'remove', :title=>'remove this from your search'),root_path(remove_query_params(q_param,localized_params)), :class=>"remove"  ) %>
                </span>
                <%= " + " unless q_param == q_arr.last %>
              </li>
            <%- end #each param -%>
                </ul>
        </span>
        

      <%- else -%>
        <ul>
          <li>
            (no search term entered)
          </li>
        </ul>
      <%- end -%>
    </dd>
       <dt >

       Limited to:
    
    </dt>
    <dd>
      <%- if !localized_params[:f].to_s.empty? -%>
        <% q_arr =  localized_params[:f] %>
        <span class='search_terms'>
          <ul>
            <%- q_arr.each do |q_param| -%>
              <li>
                <span class="q_param">
                  <%= q_param %>
                </span> 
                <span class='remove_link'>
                  <%#= link_to(image_tag('icons/remove-icon.png', :alt=>'remove', :title=>'remove this from your search'), :remove => catalog_index_path(remove_facet_params(q_param, val, localized_params)), :classes => ["filter"]   ) %>
                </span>
                <%#= " + " unless q_param == q_arr.last %>
              </li>
            <%- end #each param -%>
                </ul>
        </span>
        

      <%- else -%>
        <ul>
          <li>
            Showing all results for your search terms.
          </li>
        </ul>
      <%- end -%>
    </dd>
     
    <div class="ie_fix" style="clear:both;">&nbsp;</div>
  </dl>
</div>