<h3 class='box'>Browsing: <%=  link_to('Departments',catalog_index_path()+'/browse/departments/')%> &raquo; <%= link_to(params[:id], catalog_index_path()+'/browse/departments/'+params[:id]) %></h3>

<%

department_facet_list = get_department_facet_list(params[:id])

author_facets = department_facet_list['author_facet']

genre_facets = department_facet_list['genre_facet']

%>
 <div class='box'>
<ul class='span-8'>
<h3>Content by Author</h3>
<% author_facets.each do |v| %>
<li>
    
<%=    
 
link_to(v[:name],   add_facet_params_and_redirect('author_facet', v[:name]), :class=>"broswe_select") + "<span class='item_count'> ("+ format_num(v[:count]) + ")</span>"  
	     %>  
  </li>
  
   <% end %>
  </ul>
  
  
  <ul class='span-8'>
 <h3>Content by Genre</h3>
  <% genre_facets.each do |v| %>
  <li>
  
  
    
<%=    
 
link_to(v[:name],   add_facet_params_and_redirect('genre_facet', v[:name]), :class=>"broswe_select") + "<span class='item_count'> ("+ format_num(v[:count]) + ")</span>"  
	     %>
 
  </li>
  
   <% end %>
  </ul>
  
  
  
  
 </div>


 
  
 
 
