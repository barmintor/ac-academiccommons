<% thumbnail ||= false %>

<div>
  <% if thumbnail %>
    <img src="<%= doc_object_method(document,'/ldpd:sdef.Image/getThumbnail') %>">
  <% end %>

  <dl class="defList" style="float:right">
    <% index_fields(document).each do |solr_fname, field| -%>
      <% if should_render_show_field? document, field %>
        <% display_label = render_index_field_label document, :field => solr_fname %>
        <dt><%= display_label %></dt>
        <% if display_label == 'Permanent URL:' %>
          <dd><%= link_to document[solr_fname] %></dd>
        <% else %>
          <dd><%= h(document[solr_fname].listify.join(", ")) %></dd>
        <% end %>
      <% end %>
    <% end %>
  </dl>
</div>

<br style="clear:both" />
