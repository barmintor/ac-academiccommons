<% # container for all documents in index view -%>
<div id="documents">
  
  <% # loop thru each doc -%>
  <% @response.docs.each_with_index do |document,counter| %>

    <% # container for a single doc -%>
    <div class="document">
      
      <% # header bar for doc items in index view -%>
      <div class="documentHeader">
        
        <% # list controls for items/docs -%>
 
    <div class="documentFunctions">
          <%= render :partial=>'bookmark_control', :locals=>{:document=>document} %>
          <%= render :partial=>'folder_control', :locals=>{:document=>document, :display => "button"} %>
        </div>
 
        
        <% # main title container for doc partial view -%>

         
          <h3 class="index_title"><span class="index_counter"><%= counter + 1 + @response.params[:start].to_i %>.</span> <%= link_to_document document, :label=>document_show_link_field, :counter => (counter + 1 + @response.params[:start].to_i) %></h3>
        
        
      </div>
      
      <% # main container for doc partial view -%>
      <%= render_document_partial document, :index %>

    </div>
    
  <% end %>
</div>
