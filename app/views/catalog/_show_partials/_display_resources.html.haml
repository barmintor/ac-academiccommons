- resource_list = build_resource_list(document)
- if resource_list.length > 0


  %h3 Files:

  #show_resources
    - resource_list.each_with_index do |resource, i|
      .resource{:class => "spot" + (i%3).to_s}
        .thumbnail= link_to image_tag(thumbnail_for_resource(resource), :size => "100x100"), resource[:download_path] if resource[:download_path]
        .title= link_to auto_add_empty_spaces(resource[:filename]), resource[:download_path] if resource[:download_path] 


