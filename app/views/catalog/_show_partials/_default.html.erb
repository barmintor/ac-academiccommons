<%#= render :partial => "catalog/_show_partials/display_resources", :locals => {:document => document} %>

 
<div class="warning" style="
border: 1px solid #37397e;margin: 10px 0px;padding:15px 10px 15px 50px;background-repeat: no-repeat;background-position: 10px center;color: #0e0063;background-color: #f6fefa;background-image: url('http://digital.lampdev.columbia.edu/ac/assets/images/Info.png');font-size: 1.15em;">Due to Scheduled Server Maintenance, Files in Academic Commons Will Be Unavailable for Downloading between 4 and 6 pm EST Today</div>
<div style="clear:both;">
  <dl class="defList">
    <% document_show_fields.each do |solr_fname| -%>
      <% if document[solr_fname] %>
        <% if document[solr_fname].is_a?(Array)%>
        <% document[solr_fname].delete_if{|x| x.empty? }%>
          <% if !document[solr_fname].empty?%>
            <dt><%= document_show_field_labels[solr_fname]%></dt><dd>
            <% document[solr_fname].each do |val| %>
              <%= document_render_field_value(solr_fname, val) %><%= "<br/>".html_safe unless val == document[solr_fname].last %>
          <% end %>
          </dd>
        <% end %>
        <% else %>
        <% if !document[solr_fname].empty?%>
          <dt><%= document_show_field_labels[solr_fname]%></dt>
          <dd><%= document_render_field_value(solr_fname, document[solr_fname]) %></dd>
        <% end -%>
        <% end -%>
      <% end -%>
    <% end -%>

  </dl>

  <%= render :partial => "catalog/_show_partials/statistics" %>


  <h3> Metadata:</h3>
    <dl class="defList">
    <% get_metadata_list(document).each do |resource| -%>
      <dt><%= resource[:title] %></dt>
      <dd>
 
      <%= link_to "View", resource[:show_url] if resource[:show_url] %> | 
 
      <%= link_to "Download", resource[:download_url] if resource[:download_url] %> 
      </dd>
    <% end -%>

  </dl>
    
