<%= render partial: 'download_button' %>

<div class="doi-container">
  <label for="doi" class="doi-label">DOI</label>
  <div class="doi-and-copy-button">
    <textarea rows="1" readonly onclick="this.focus();this.select()" id="doi"><%= @document.full_doi %></textarea>
    <button class="btn copy-to-clipboard" type="button" data-clipboard-target="#doi" aria-label="Copy DOI to clipboard">
      <i class="glyphicon glyphicon-copy"></i>
    </button>
  </div>
</div>
