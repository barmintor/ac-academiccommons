- thumbnail ||= false
%div
  - if thumbnail
    %img(src="#{doc_object_method(document,'/ldpd:sdef.Image/getThumbnail')}") 
  %dl.defList(style="float:right")
    - index_field_names.select { |f| document[f] }.each do |solr_fname|
      %dt= index_field_labels[solr_fname]
      - if index_field_labels[solr_fname] == 'Permanent URL:'
        <dd>
        %a{:href => document[solr_fname]} #{document[solr_fname]}
        </dd>
      - else
        %dd= h(document[solr_fname].listify.join(", "))

%br(style="clear:both")
