<meta name="twitter:card" content="summary_large_image"/>
<meta name="twitter:site" content="<%= application_name %>">
<meta name="twitter:creator" content="Columbia University Libraries">
<meta name="twitter:image" content="<%= image_url('social-media-card.jpg'); %>">

<meta property="og:site_name" content="<%= application_name %>"/>
<meta property="og:image" content="<%= image_url('social-media-card.jpg'); %>" />

<% if @document %>
  <% semantics_hash = @document.to_semantic_values %>

  <meta name="twitter:title" content="<%= semantics_hash[:title].first %>">
  <meta name="twitter:description" content="<%= semantics_hash[:abstract].first %>">

  <meta property="og:url" content="<%= @document.full_doi %>"/>
  <meta property="og:type" content="article" />
  <meta property="og:title" content="<%= semantics_hash[:title].first %>"/>
  <meta property="og:description" content="<%= semantics_hash[:abstract].first %>"/>
  <meta name="description" content="<%= semantics_hash[:abstract].first %>"/>

<% else %>

  <meta name="twitter:title" content="<%= render_page_title %>">

  <meta property="og:url" content="<%= request.url %>"/>
  <meta property="og:title" content="<%= render_page_title %>"/>

<% end %>
